<!DOCTYPE html>
<html>
	<head>
		<link rel="stylesheet" href="node_modules/reveal.js/css/reveal.css">
		<link rel="stylesheet" href="node_modules/reveal.js/css/theme/blood.css">
	</head>
	<body>
		<div class="reveal">
			<div class="slides">
                <% if(sections.length) {
                    sections.forEach(function(item) {
                        if(item instanceof Array) { %>
                <section>
                            <% item.forEach(function(subitem) { %>
                    <section data-markdown data-background-image="images/angelhack-light-logo.png" data-background-size="auto" data-background-position="bottom left">
                        <textarea data-template>
                                <%= subitem %>
                        </textarea>
                    </section>
                            <% }) %>
                </section>
                        <% } else { %>
                <section data-markdown data-background-image="images/angelhack-light-logo.png" data-background-size="auto" data-background-position="bottom left">
                    <textarea data-template>
                            <%= item %>
                    </textarea>
                </section>
                <% }})} %>
			</div>
		</div>
        <script src="node_modules/reveal.js/js/reveal.js"></script>
        <script src="node_modules/reveal.js/plugin/markdown/marked.js"></script>
        <script src="node_modules/reveal.js/plugin/markdown/markdown.js"></script>
		<script>
			Reveal.initialize();
		</script>
	</body>
</html>